<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.uberv.vugraph2.fragments.UserSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/fragment_user_settings_avatar_niv"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    tools:src="@drawable/eyeball"/>

                <Button
                    android:id="@+id/fragment_user_settings_change_avatar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Change"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"/>

                <TextView
                    android:id="@+id/fragment_user_settings_fullname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    tools:text="Richard Kuodis"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Role:"/>

                <TextView
                    android:id="@+id/fragment_user_settings_role_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    tools:text="Intern"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Joined:"/>

                <TextView
                    android:id="@+id/fragment_user_settings_joined_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    tools:text="1/22/2017"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">


            <TextView
                android:id="@+id/fragment_user_settings_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Email:"/>

            <TextView
                android:id="@+id/fragment_user_settings_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_user_settings_email_label"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                tools:text="richard.kuodis@gmail.com"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/fragment_user_settings_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_user_settings_email_tv"
                android:layout_marginTop="10dp"
                android:text="Id:"/>

            <TextView
                android:id="@+id/fragment_user_settings_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_user_settings_id_label"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="257d9769-de4b-11e6-861b-0ad881f403bf"/>

            <Button
                android:id="@+id/fragment_user_settings_change_email_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fragment_user_settings_email_tv"
                android:layout_alignTop="@+id/fragment_user_settings_email_tv"
                android:layout_toEndOf="@+id/fragment_user_settings_email_tv"
                android:background="@null"
                android:text="Change"
                android:textColor="@color/colorAccent"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
